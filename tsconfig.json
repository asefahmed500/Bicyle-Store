{
  "compilerOptions": {
    "target": "es6",                                 
    "module": "commonjs",                            
    "moduleResolution": "node",                     
    "rootDir": "./src",                             
    "outDir": "./dist",                            
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                  
    "declaration": true,                             
    "sourceMap": true,                              
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
